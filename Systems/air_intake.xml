        <kinematic name="trash/systems/air-intake/cone-pos-norm">
            <input>systems/air-intake/cone-auto-logic</input>
            <traverse>
                <setting> <position>   0.0 </position> <time> 0.00 </time> </setting>
                <setting> <position> 100.0 </position> <time> 0.75 </time> </setting>
            </traverse>
            <noscale/>
            <output>systems/air-intake/cone-pos-norm</output>
        </kinematic>

    </channel>
        
</system>